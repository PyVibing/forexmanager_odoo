<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="forexmanager_currentdesktransient_form_view" model="ir.ui.view">
        <field name="name">ForexManager currentdesktransient form view</field>
        <field name="model">forexmanager.currentdesktransient</field>
        <field name="arch" type="xml">
            <form>
                <style>
                    .o_form_button_save.btn-light {
                        display: None;
                    }
                    
                    .operation-card {
                        flex: 1;
                        min-width: 300px;
                        max-width: 500px;
                        margin: 20px auto;
                        padding: 20px;
                        background-color: #ffffff;
                        border-radius: 10px;
                        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
                        border-left: 5px solid #007bff;
                    }

                    .section {
                        margin-bottom: 20px;
                    }

                    .section-title {
                        font-size: 16px;
                        font-weight: 700;
                        color: #007bff;
                        text-align: center;
                        margin-bottom: 10px;
                        display: block;
                    }

                    .field-row {
                        display: flex;
                        flex-direction: column;
                        margin-bottom: 15px;
                    }

                    label {
                        font-weight: 600;
                        color: #444;
                        margin-bottom: 4px;
                    }

                    .field-input {
                        border: 1px solid #ccc;
                        border-radius: 6px;
                        padding: 4px 10px;
                        min-height: 30px;
                        width: 100%;
                    }

                    .field-upload {
                        max-width: 200px;
                    }

                    .btn-link {
                        margin-top: 10px;
                        padding: 6px 12px;
                        border: none;
                        border-radius: 6px;
                        background: linear-gradient(135deg, #007bff, #0056b3);
                        color: white;
                        font-weight: 600;
                        cursor: pointer;
                        transition: background-color 0.2s ease;
                        text-align: center;
                    }

                    .btn-link:hover {
                        background-color: #004a99;
                    }

                    .main-title {
                        text-align: center;
                        font-size: 20px;
                        font-weight: 800;
                        color: #fff;
                        background: linear-gradient(135deg, #007bff, #0056b3);
                        padding: 10px 0;
                        border-radius: 8px;
                        margin-bottom: 20px;
                    }
                </style>

                <sheet>
                    <div class="operation-card">
                        <div class="main-title">VINCULAR VENTANILLA</div>

                        <div class="section">
                            <span class="section-title">DATOS DE VINCULACIÃ“N</span>

                            <div class="field-row">
                                <label for="user_id"/>
                                <field name="user_id" class="field-input"
                                    options="{'no_open': True, 'no_create': True}"/>
                            </div>

                            <div class="field-row">
                                <label for="current_desk"/>
                                <field name="current_desk" class="field-input"
                                    options="{'no_open': True, 'no_create': True}"/>
                            </div>

                            <div class="field-row" invisible="id">
                                <label for="desk_code"/>
                                <field name="desk_code" class="field-upload" readonly="id"/>
                                <button name="update_current_desk" type="object" string="VINCULAR"
                                        class="btn-link"/>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>


        </field>
    </record>

    <record id="forexmanager_currentdesktransient_action" model="ir.actions.act_window">
        <field name="name">VINCULAR VENTANILLA</field>
        <field name="res_model">forexmanager.currentdesktransient</field>
        <field name="view_mode">form</field>
    </record>
</odoo>