<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    
    <!-- Form view of forexmanager.transfer for admin -->
    <record id="forexmanager_transfer_form_admin_view" model="ir.ui.view">
        <field name="name">ForexManager transfer form admin view</field>
        <field name="model">forexmanager.transfer</field>
        <field name="arch" type="xml">
            <form create="0">
                <style>
                    .operation-card {
                        margin: 20px auto;
                        padding: 20px;
                        background-color: #ffffff;
                        border-radius: 10px;
                        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
                        border-left: 5px solid #007bff;
                        max-width: 1000px;
                    }

                    .section {
                        margin-bottom: 20px;
                    }

                    .section-title {
                        font-size: 16px;
                        font-weight: 700;
                        color: #007bff;
                        text-align: center;
                        margin-bottom: 10px;
                        display: block;
                    }

                    .field-row {
                        display: flex;
                        flex-direction: column;
                        margin-bottom: 15px;
                    }

                    label {
                        font-weight: 600;
                        color: #444;
                        margin-bottom: 4px;
                    }

                    .field-input {
                        border: 1px solid #ccc;
                        border-radius: 6px;
                        padding: 4px 10px;
                        min-height: 30px;
                        width: 100%;
                    }

                    .main-title {
                        text-align: center;
                        font-size: 20px;
                        font-weight: 800;
                        color: #fff;
                        background: linear-gradient(135deg, #007bff, #0056b3);
                        padding: 10px 0;
                        border-radius: 8px;
                        margin-bottom: 20px;
                    }

                    /* Distribución en dos columnas */
                    .info-grid {
                        display: flex;
                        flex-wrap: wrap;
                        gap: 20px;
                    }

                    .info-col {
                        flex: 1;
                        min-width: 250px;
                    }
                </style>

                <sheet>
                    <div class="operation-card">
                        <div class="main-title">ADMINISTRAR TRASPASOS</div>

                        <!-- Tabla de líneas -->
                        <div class="section">
                            <span class="section-title">DIVISAS TRASPASADAS</span>
                            <field name="transfer_line_ids">
                                <list editable="top" delete="0" create="0">
                                    <field name="sender_desk_id" invisible="sent_to != uid and sent_by != uid" readonly="1"/>
                                    <field name="receiver_desk_id" invisible="sent_to != uid and sent_by != uid" 
                                            readonly="status_source == 'cancelled' or status_destination == 'received'"/>
                                    <field name="currency_id" readonly="1"/>
                                    <field name="amount" readonly="1"/>
                                    <field name="status_source" readonly="1"/>
                                    <field name="source_time"/>
                                    <field name="status_destination" readonly="1"/>
                                    <field name="destination_time"/>
                                </list>
                            </field>                        
                        </div>

                        <!-- Info adicional -->
                        <div class="section">
                            <span class="section-title">INFORMACIÓN DEL TRASPASO</span>
                            <div class="info-grid">

                                <!-- Columna izquierda -->
                                <div class="info-col">
                                    <div class="field-row">
                                        <label for="user_id"/>
                                        <field name="user_id" class="field-input"/>
                                    </div>
                                    <div class="field-row">
                                        <label for="worksession_id"/>
                                        <field name="worksession_id" class="field-input"/>
                                    </div>
                                    
                                </div>

                                <!-- Columna derecha -->
                                <div class="info-col">
                                    <div class="field-row">
                                        <label for="current_desk_id"/>
                                        <field name="current_desk_id" class="field-input"/>
                                    </div>
                                    <div class="field-row">
                                        <label for="opening_desk_id"/>
                                        <field name="opening_desk_id" class="field-input"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view of forexmanager.transfer for admin -->
    <record id="forexmanager_transfer_list_admin_view" model="ir.ui.view">
        <field name="name">ForexManager transfer list admin view</field>
        <field name="model">forexmanager.transfer</field>
        <field name="arch" type="xml">
            <list create="0">
                <field name="name"/>
                <field name="transfer_line_ids"/>
                <field name="destination_users"/>
                <field name="user_id"/>
                <field name="worksession_id"/>
                <field name="current_desk_id"/>
                <field name="opening_desk_id"/>                
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <!-- For admin -->
    <record id="forexmanager_transfer_admin_action" model="ir.actions.act_window">
        <field name="name">ADMINISTRAR TRASPASOS</field>
        <field name="res_model">forexmanager.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="actwin_admin_list" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="forexmanager.forexmanager_transfer_admin_action"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="forexmanager.forexmanager_transfer_list_admin_view"/>
    </record>

    <record id="actwin_admin_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="forexmanager.forexmanager_transfer_admin_action"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="forexmanager.forexmanager_transfer_form_admin_view"/>
    </record>

</odoo>
