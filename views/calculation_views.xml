    <!-- List view of forexmanager.calculation -->
    <record id="forexmanager_calculation_list_view" model="ir.ui.view">
        <field name="name">ForexManager calculation list view</field>
        <field name="model">forexmanager.calculation</field>
        <field name="arch" type="xml">
            <list>
                <field name="id"/>
                <field name="name"/>
                <field name="amount_received" string="Recibido"/>
                <field name="currency_source_id" string="Moneda"/>
                <field name="amount_delivered" string="Entregado"/>
                <field name="currency_target_id" string="Moneda"/>
                <field name="discount"/>
                <field name="date"/>
                <field name="operation_ref"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

    <!-- Action of forexmanager.operation -->
    <record id="forexmanager_history_calculation_action" model="ir.actions.act_window">
        <field name="name">HISTORIAL</field>
        <field name="res_model">forexmanager.calculation</field>
        <field name="view_mode">list</field>
        <field name="context">{'create': False}</field>
    </record>
