<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Form view of forexmanager.workcenter -->
    <record id="forexmanager_workcenter_form_view" model="ir.ui.view">
        <field name="name">ForexManager workcenter form view</field>
        <field name="model">forexmanager.workcenter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <h1 class="bg-primary text-white p-2 rounded fs-3">ADMINISTRAR CENTROS DE TRABAJO</h1>
                    <div style="float: left;">

                        <div style="display: table;">
                            <div style="display: table-cell; width: 200px;">
                                <label for="name"/>
                            </div>
                            <div style="display: table-cell">
                                <field name="name" style="border-bottom: 1px solid black; margin-left: 15px;"/>
                            </div>                            
                        </div>
                        <div style="display: table;">
                            <div style="display: table-cell; width: 200px;">
                                <label for="desk_ids"/>
                            </div>
                            <div style="display: table-cell">
                                <field name="desk_ids" style="border-bottom: 1px solid black; margin-left: 15px;"
                                        readonly="1"/>
                            </div>                            
                        </div>
                        <div style="display: table;">
                            <div style="display: table-cell; width: 200px;">
                                <label for="note"/>
                            </div>
                            <div style="display: table-cell">
                                <field name="note" style="border-bottom: 1px solid black; margin-left: 15px;"/>
                            </div>                            
                        </div>
                        <div style="display: table;">
                            <div style="display: table-cell; width: 200px;">
                                <label for="currency_ids"/>
                            </div>
                            <div style="display: table-cell">
                                <field name="currency_ids" style="border-bottom: 1px solid black; margin-left: 15px;"
                                        options="{'no_create': True}" widget="many2many_tags"/>
                            </div>                            
                        </div>                      
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view of forexmanager.workcenter -->
    <record id="forexmanager_workcenter_list_view" model="ir.ui.view">
        <field name="name">ForexManager workcenter list view</field>
        <field name="model">forexmanager.workcenter</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="desk_ids"/>
                <field name="currency_ids"/>
                <field name="note"/>
                <button name="create_inventories" type="object" icon="fa-refresh" title="Crear inventarios iniciales para nuevas divisas"/>
            </list>
        </field>
    </record>



    <!-- Action of forexmanager.workcenter -->
    <record id="forexmanager_config_workcenters_action" model="ir.actions.act_window">
        <field name="name">ADMINISTRAR CENTROS DE TRABAJO</field>
        <field name="res_model">forexmanager.workcenter</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>